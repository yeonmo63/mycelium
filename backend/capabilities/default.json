{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "fs:allow-read",
      "scope": [
        "$DOWNLOADS/**",
        "$PICTURES/**",
        "$DESKTOP/**",
        "$DOCUMENT/**",
        "C:\\Users\\**"
      ]
    },
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-write-text-file",
    "core:event:default",
    "updater:default",
    "process:default",
    "core:app:default"
  ]
}